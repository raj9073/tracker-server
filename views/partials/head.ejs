<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title><%= typeof title !== 'undefined' ? title : 'Link Shortener' %></title>
<style>
  :root {
    --bg-color: #0d1117;
    --card-bg: #161b22;
    --text-color: #c9d1d9;
    --accent: #58a6ff;
    --border: #30363d;
    --success: #238636;
    --danger: #da3633;
  }
  * { box-sizing: border-box; }
  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    background: var(--bg-color);
    color: var(--text-color);
    margin: 0;
    padding: 20px;
    min-height: 100vh;
  }
  .container { max-width: 800px; margin: 0 auto; }
  h1 { border-bottom: 1px solid var(--border); padding-bottom: 16px; }
  input[type="text"], input[type="password"] {
    width: 100%;
    padding: 10px 14px;
    border: 1px solid var(--border);
    border-radius: 6px;
    background: var(--card-bg);
    color: var(--text-color);
    font-size: 1em;
  }
  input:focus {
    outline: none;
    border-color: var(--accent);
  }
  button, .btn {
    padding: 10px 20px;
    border: none;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    font-size: 1em;
  }
  .btn-primary { background: var(--success); color: white; }
  .btn-primary:hover { opacity: 0.9; }
  .btn-danger { background: var(--danger); color: white; }
  .error { color: var(--danger); margin-top: 10px; }
  .success { color: var(--success); margin-top: 10px; }
  a { color: var(--accent); text-decoration: none; }
  a:hover { text-decoration: underline; }
  .mt { margin-top: 20px; }
  .card {
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 6px;
    padding: 16px;
    margin-bottom: 12px;
  }
  .flex { display: flex; gap: 12px; align-items: center; flex-wrap: wrap; }
  table { width: 100%; border-collapse: collapse; }
  th, td { padding: 10px; text-align: left; border-bottom: 1px solid var(--border); }
  th { color: #8b949e; font-weight: 600; }
</style>
